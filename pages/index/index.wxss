/**index.wxss**/
.headbar {
  width: 100%;
  height: 85rpx;
  opacity: 1;
  background: rgba(217,159,159,1);
  box-shadow: 0px 3px 6px 0px rgba(0,0,0,0.16);
}
.headbar_white {
  width: 90%;
  height: 50px;
  position: absolute; 
  left: 50%;
  opacity: 1;
  background: rgba(255,255,255,1);
  box-shadow: 0px 3px 6px 0px rgba(0,0,0,0.16);
  transform: translateX(-50%);
  border: solid 0;
  border-radius: 5px;
  z-index:1;
}
.headbar_button {
  position: absolute;
  width: 145px;
  height: 26px;
  opacity: 1;
  background: rgba(238,131,131,1);
  box-shadow:0px 1px 1px 1px rgba(0,0,0,0.16);
  float: left;
  display: inline;
  margin-top:12px; 
  background:rgba(239,240,240,0.99);
  color:#888;
  line-height:unset;
  border-radius:30px;
}
.headbar_index {
  background:rgba(238,131,131,1);
  color:white;
}
.headbar_vote {
  background:rgba(150,183,175,1);
  color:white;
}
.order_way {
  background: rgba(247,245,245,1);
  color: rgba(0,0,0,1);
  box-shadow:0px 3px 6px 0px rgba(0,0,0,0.16);
  display:inline;
  font-size:14px;
  padding-top:5px;
  padding-bottom:3px;
  padding-left:10px;
  padding-right:10px;
  margin:0px 3px;
}
.order_index {
  background:rgba(252,220,220,1);
}
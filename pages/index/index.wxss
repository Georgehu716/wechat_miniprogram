/**index.wxss**/
.headbar {
  position: fixed;
  width: 100%;
  height: 85rpx;
  opacity: 1;
  background: #D99F9F;
  box-shadow: 0px 3px 6px 0px rgba(0,0,0,0.16);
  z-index: 3;
}
.headbar_white {
  width: 90%;
  height: 50px;
  position: absolute; 
  left: 50%;
  opacity: 1;
  background: #FFFFFF;
  box-shadow: 0px 3px 6px 0px rgba(0,0,0,0.16);
  transform: translateX(-50%);
  border: solid 0;
  border-radius: 5px;
  z-index: 3;
}
.headbar_button {
  position: absolute;
  width: 145px;
  height: 26px;
  opacity: 1;
  box-shadow:0px 1px 1px 1px rgba(0,0,0,0.16);
  float: left;
  display: inline;
  margin-top:12px; 
  background:rgba(239,240,240,0.99);
  color:#888;
  line-height:unset;
  border-radius:30px;
}
.headbar_index {
  background:#EE8383;
  color:white;
}
.headbar_vote {
  background:#96B7AF;
  color:white;
}
.order_way {
  background: #F7F5F5;
  color: #000;
  box-shadow:0px 3px 6px 0px rgba(0,0,0,0.16);
  display:inline;
  font-size:14px;
  padding-top:5px;
  padding-bottom:3px;
  padding-left:10px;
  padding-right:10px;
  margin:0px 3px;
  z-index: 2;
}
.order_index_box {
  position:absolute;
  top:44px;
  margin-left:30px;
}
.order_vote_box {
  position:absolute;
  top:44px;
  margin-right:30px;
  right:0px;
}
.order_index {
  background:#FCDCDC;
}
.order_vote {
  background:#B9D9D1;
}
.body {
  position:absolute;
  top:70px;
}
.items {
  margin-left:8px;
  margin-bottom:5px;
  margin-right:8px;
  border-radius:0px 200px 200px 0px;
  height:100px;
  width:90%;
  box-shadow:0px 3px 6px 0px rgba(0,0,0,0.16);
}
.ItemImg {
  height: 75px;
  width: 75px;
  z-index: 0;
  margin-left: 8px;
  margin-top: 12.5px;
}
.ItemWords {
  margin-left:92px;
  transform:translateY(-80px);
  width:57%;
}
.ItemTitle {
  color:white;
  font-size:18px;
  line-height:20px;
}
.ItemDetail {
  color:white;
  font-size:12px;
  margin-top:10px;
}
.ItemGrade {
  position:absolute;
  transform:translateY(-124px);
  left:80%;
  color:#FCDD79;
  font-size:18px;
}
.ItemDate {
  font-size:10px;
  margin-top:2px;
  position:absolute;
  left:20%;
  color:#736E6E;
}
.ItemCommentNum {
  font-size:10px;
  margin-top:2px;
  position:absolute;
  left:60%;
  color:#736E6E;
}
/**index.wxss**/
.headbar {
  position: fixed;
  width: 100%;
  height: 220rpx;
  opacity: 1;
  background: #D99F9F;
  box-shadow: 0px 3px 6px 0px rgba(0,0,0,0.16);
  z-index: 3;
}
.headbar_white {
  width: 90%;
  height: 90rpx;
  position: absolute; 
  left: 50%;
  opacity: 1;
  background: #FFFFFF;
  box-shadow: 0px 3px 6px 0px rgba(0,0,0,0.16);
  transform: translateX(-50%);
  border: solid 0;
  border-radius: 15rpx;
  z-index: 3;
  top: 145rpx;
}
.headbar_button {
  position: absolute;
  width: 265rpx;
  height: 50rpx;
  opacity: 1;
  box-shadow:0px 1px 1px 1px rgba(0,0,0,0.16);
  float: left;
  display: inline;
  margin-top:22rpx; 
  background:rgba(239,240,240,0.99);
  color:#888;
  line-height:unset;
  border-radius:60rpx;  
  font-size: 36rpx;
}
.headbar_index {
  background:#EE8383;
  color:white;
}
.headbar_vote {
  background:#96B7AF;
  color:white;
}
.order_way {
  background: #F7F5F5;
  color: #000;
  box-shadow:0px 3px 6px 0px rgba(0,0,0,0.16);
  display:inline;
  font-size:25rpx;
  padding-top:16rpx;
  padding-bottom:5rpx;
  padding-left:20rpx;
  padding-right:20rpx;
  margin:0px 6rpx;
  z-index: 2;
}
.order_index_box {
  position:absolute;
  top:223rpx;
  margin-left:56rpx;
}
.order_vote_box {
  position:absolute;
  top:223rpx;
  margin-right:56rpx;
  right:0rpx;
}
.order_index {
  background:#FCDCDC;
}
.order_vote {
  background:#B9D9D1;
}
.body {
  position:absolute;
  top:250rpx;
}
.items {
  margin-left:16rpx;
  margin-bottom:10rpx;
  margin-right:16rpx;
  border-radius:0px 200rpx 200rpx 0px;
  height:200rpx;
  width:90%;
  box-shadow:0px 3px 6px 0px rgba(0,0,0,0.16);
}
.ItemImg {
  height: 170rpx;
  width: 170rpx;
  z-index: 0;
  margin-left: 16rpx;
  margin-top: 18rpx;
  border-radius: 15rpx;
}
.ItemWords {
  margin-left:200rpx;
  transform:translateY(-180rpx);
  width:57.5%;
}
.ItemTitle {
  color:white;
  font-size:36rpx;
  line-height:40rpx;
}
.ItemDetail {
  color:white;
  font-size:22rpx;
  position:fixed;
  top:90rpx;
}
.ItemGrade {
  position:fixed;
  top: 60rpx;
  right: -50rpx;
  color:#FCDD79;
  font-size:35rpx;
}
.ItemDate {
  font-size:20rpx;
  position:fixed;
  left:50%;
  color:#736E6E;
  top:155rpx;
}
.ItemCommentNum {
  font-size:20rpx;
  position:fixed;
  left:20%;
  color:#736E6E;
  top:155rpx;
}
.votes {
  margin-left:16rpx;
  margin-bottom:10rpx;
  margin-right:16rpx;
  border-radius:200px 0px 0px 200px;
  height:200rpx;
  width:90%;
  box-shadow:0px 3px 6px 0px rgba(0,0,0,0.16);
  z-index: -1;
}